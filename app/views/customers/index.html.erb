<div class="profile-container">
  <div class="Title">
      <h2>My page</h2>
  </div>
  <%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <%= @customer.name %>
  <%= @customer.user_name %>
  <% if @customer.id == current_customer.id %>
    <p><%= link_to "プロフィール編集", edit_customer_path(@customer), class: "pull-right" %></p>
  <% end %>
  
</div>

<% if @post.liked_by?(current_customer) %>
<li>
  <%= link_to post_like_path(@post), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= @post.likes.count %>
  <% end %>
</li>
<% else %>
<li>
  <%= link_to post_likes_path(@post), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= @post.likes.count %>
  <% end %>
</li>
<% end %>
<li>
  <i class="fa fa-comment">
    <%= link_to "#{@customer.comments.count} コメント", root_path %>
  </i>
</li>