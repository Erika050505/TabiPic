  
  <%#自分の投稿の詳細画面の場合に編集ページへのリンクを表示する %>
  <% if @post.customer_id == current_customer.id %>
      <p><%= link_to "編集", edit_post_path(@post), class: "glyphicon glyphicon-edit" %></p>
  <% end %>

  <%= form_with(model:[@post, @comment], local: true) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_area :comment, rows:'2', class: "form-control",placeholder: "コメントを追加" %>
      </div>
    </div>
    <%= f.submit "追加する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <% end %>

　<% @post.comments.each do |comment| %>
    <li class="comment">
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= image_tag('sample-author1.jpg', style: "width: 60px; height: 60px;") %>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <a href="#" class="link-author"><%= comment.customer.user_name %></a>
            <span class="comment-meta">
              <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
            </span>
          </div>
          <div class="comment-entry"><%= comment.comment %></div>
        </div>
      </div>
    </li>
  <% end %>