<div class="row">
    <div class="Title">
      <h2>編集する</h2>
    </div>
    <br>
    
    <%= form_with model:@post, local:true do |f| %>
      <%= attachment_image_tag @post, :image, :size =>'300x200' %>
      </br>
      <%= f.text_area :sentence, autofocus: true, class:"form-caption", rows:"5", placeholder:"投稿文" %>
      </br>
      <%= f.label :area_id, 'エリア' %>
      </br>
      <%= f.collection_select(:area_id, @areas, :id, :continent, include_blank: true, autofocus: true) %>
      </br>
      <%= f.label :tag_list, 'タグ' %>
      <%= f.text_field :tag_list, :value =>@post.tag_list.join(','), autofocus: true, class: "form-control" %>
      </br>
      <%= f.submit "編集する" %>
    <% end %>
    
</div>