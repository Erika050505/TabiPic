<div class="container">
  <div class="row">

 <%# 検索した投稿を表示させるとき %>
    <%# @search_posts.each do |post| %>
    <%# end %>
    
 <%# tag_list.each do |tag| %>
 <%# span.badge.badge-primary.mr-1.p-2 %>
   <%#= link_to tag, tasks_path(tag_name: tag), class: "text-white" %>
      
      <% @posts.each do |post| %>
            <div class="masonry-block">
              <div class="block block-image v1">
                <div class="block-image">
                  <div class="view view-first">
                    <%= attachment_image_tag post, :image %>
                  </div>
                </div>
                <div class="block-content">
                  <%= image_tag('no_image.jpg', class: "img-circle pull-left profile-thumb") %>
                  <h3 class="block-title">
                    <%= link_to post_path(post.id) do %>
                      <i class="fa fa-map-marker"></i><%= post.customer.name %>
                    <% end %>
                  </h3>
                  <p><%= post.sentence %></p>
                  <ul class="inline-meta">
                    <li>
                      <%= post.customer.name %>
                    </li>
                    <li>
                      <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
      <% end %>
    
  </div>
</div>