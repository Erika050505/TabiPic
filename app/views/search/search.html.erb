<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.text_field :name %>
  <%= f.submit :search %>
<% end %>
<table>
  <thead>
    <tr>
      <th>検索結果</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <div class="col-md-4">
            <div class="masonry-block">
              <div class="block block-image v1">
                <div class="block-image">
                  <div class="view view-first">
                    <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, :size =>'300x200' %>
                  </div>
                </div>
                <div class="block-content">
                  <%= image_tag('no_image.jpg', class: "img-circle pull-left profile-thumb") %>
                  <h3 class="block-title">
                      <%= post.customer.name %>
                    <% end %>
                  </h3>
                  <p><%= post.sentence %></p>
                  <ul class="inline-meta">
                    <li>
                      <%= post.customer.name %>
                    </li>
                  <% if customer_signed_in? %>
                    <% if post.liked_by?(current_customer) %>
                      <li>
                        <%= link_to post_likes_path(post), method: :delete do %>
                          <i class="fa fa-heart",aria-hidden="true", style="color: red;"></i>
                          <%= post.likes.count %>
                        <% end %>
                      </li>
                    <% else %>
                      <li>
                        <%= link_to post_likes_path(post), method: :post do %>
                          <i class="fa fa-heart" aria-hidden="true"></i>
                          <%= post.likes.count %>
                        <% end %>
                      </li>
                    <% end %>
                  <% else %>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                    <%= post.likes.count %>
                  <% end %>
                    <li>
                      <i class="fa fa-comment">
                      <%= link_to "#{post.comments.count}", post_path(post.id) %>
                      </i>
                    </li>
                  
                  </ul>
                </div>
              </div>
            </div>
          </div>
    <% end %>
  </tbody>
</table>